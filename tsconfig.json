{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "outDir": "./lib",
        "declaration": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "noEmit": false
    },
    "include": [
        "src/**/*.js"
    ],
    "exclude": [
        "node_modules"
    ]
}